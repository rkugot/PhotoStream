.posts-wrapper.row
  .post
    .post-head
      .name
        Roman Kugot
    .image.center-block
      =image_tag @post.image.url(:medium)
    %p.caption
      =@post.caption
    .text-center
      =link_to 'Cancel', root_path
      |  
      =link_to 'Edit', edit_post_path(@post.id)
      |
      =link_to 'Delete', post_path(@post.id), method: :delete, data: { confirm: "Are you sure?" }